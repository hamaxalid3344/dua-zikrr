{
  "poems": [
    {
      "id": 1,
      "title": "خەون",
      "author": "نووسەری نەناسراو",
      "category": "فەلسەفی",
      "preview": "لە شەوێکی تاریک و بێ دەنگدا...",
      "content": [
        "لە شەوێکی تاریک و بێ دەنگدا",
        "خەونێکم بینی بە ڕەنگ و ڕێگا",
        "گوڵێک بوو لە باخچەی دڵمدا",
        "هیوایەک بوو بۆ سبەینێی نوێ",
        "بەڵام بەیانی کاتێک هەستام",
        "تەنها بیرەوەری ماوە لە دڵمدا"
      ]
    },
    {
      "id": 2,
      "title": "ئاسمان",
      "author": "شاعیری دڵسۆز",
      "category": "سروشت",
      "preview": "ئاسمان چەند فراوانە...",
      "content": [
        "ئاسمان چەند فراوانە",
        "وەک دڵی دایکێکی میهرەبان",
        "ئەستێرەکان دەگەینە",
        "وەک هیواکانی منداڵان",
        "مانگیش لەناوەڕاستیدا",
        "وەک موژدەیەکی خۆش دەدرەوشێتەوە"
      ]
    },
    {
      "id": 3,
      "title": "خۆشەویستی",
      "author": "شاعیری عاشق",
      "category": "خۆشەویستی",
      "preview": "خۆشەویستی ڕووناکی ژیانە...",
      "content": [
        "خۆشەویستی ڕووناکی ژیانە",
        "وەک خۆر لە بەیانیدا",
        "دڵەکانی گەرم دەکاتەوە",
        "ئومێد دەبەخشێت بە دڵشکاوەکان",
        "وا دەکات زیندوو بین",
        "لە جیهانێکی پڕ لە وێرانی"
      ]
    },
    {
      "id": 4,
      "title": "پاییز",
      "author": "شاعیری سروشت",
      "category": "سروشت",
      "preview": "پاییز هات و گەڵاکان...",
      "content": [
        "پاییز هات و گەڵاکان",
        "وەک پەڕەکانی ژیان دەکەون",
        "ڕەنگی زەرد و سوور",
        "چیرۆکی کۆتایی هاتنیان دەگێڕن",
        "بەڵام دارەکان دەزانن",
        "کە بەهار دەگەڕێتەوە"
      ]
    },
    {
      "id": 5,
      "title": "نیشتمان",
      "author": "شاعیری نیشتمانپەروەر",
      "category": "نیشتمان",
      "preview": "نیشتمان گەرموگوڕی دایکە...",
      "content": [
        "نیشتمان گەرموگوڕی دایکە",
        "خاکەکەی پیرۆزە",
        "هەر تۆزێکی لە خۆڵەکەی",
        "مێژوویەکی بێ پایانی هەیە",
        "ئێمە منداڵەکانی ئەم خاکەین",
        "و هەتا هەناسە هەیە پاسەوانین"
      ]
    },
    {
      "id": 6,
      "title": "کات",
      "author": "شاعیری فەلسەفی",
      "category": "فەلسەفی",
      "preview": "کات وەک ڕووبارێک دەڕوات...",
      "content": [
        "کات وەک ڕووبارێک دەڕوات",
        "بێ وەستان، بێ ماندووبوون",
        "ساتەکان دەبنە چرکە",
        "چرکەکان دەبنە ساڵ",
        "ئێمەش لە کەنارەوە",
        "تەماشای ژیان دەکەین"
      ]
    },
    {
      "id": 7,
      "title": "هیوای نوێ",
      "author": "شاعیری هیوامەند",
      "category": "فەلسەفی",
      "preview": "هیوای نوێ لە دڵدا...",
      "content": [
        "هیوای نوێ لە دڵدا",
        "وەک ڕووناکی بەهارێک",
        "دەگاتەوە لە کاتی تاریکیدا",
        "بۆ ئەو کەسانەی کە هەرگیز نەبوون",
        "دەبێتە هۆی زیندووبوون",
        "لە جیهانێکی پڕ لە هەمیشەیی"
      ]
    },
    {
      "id": 8,
      "title": "دەنگی دەریا",
      "author": "شاعیری سروشتی",
      "category": "سروشت",
      "preview": "دەنگی دەریا لە گوڵەکاندا...",
      "content": [
        "دەنگی دەریا لە گوڵەکاندا",
        "وەک هەواڵێکی خۆش بۆ دڵ",
        "هەر جار کاتێک دەگوازرێت",
        "بیر دەکات بە ئازادی و گەشەپێدان",
        "دەریا دەزانێت هەرگیز",
        "ناتوانرێت بێ کۆتایی بێت"
      ]
    },
    {
      "id": 9,
      "title": "شەو",
      "author": "شاعیری نەناسراو",
      "category": "فەلسەفی",
      "preview": "شەو هاتووە بە خۆشی...",
      "content": [
        "شەو هاتووە بە خۆشی",
        "بەهیوای ڕۆژێکی نوێ",
        "ستێرەکان لە ئاسمانیدا",
        "وەک چیرۆکی کۆتایی نەهاتوو",
        "دەنگی باد دەگوازرێت",
        "بۆ ئەو کەسانەی کە هەرگیز نەبوون"
      ]
    }
  ]
}